<!DOCTYPE html>
<html ng-app="myApp">

<head>
    <title>Sealify</title>
    <%include templates/bootstrap.ejs%>
    <!-- Custom styles for this template -->
    <link href="/css/cover.css" rel="stylesheet">
 </head>

<body ng-controller="controller">
    <div class="container-fluid">
        <div class="row" id="header">
            <div class="col-md-1 col-md-offset-1">
                <div id="logo-div">
                  <img id="logo" src="images/white_wire_logo.png"><br><br>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-6">
                <div class="head-btns">
                    <button type="button" class="btn btn-lg btn-primary-outline" id="btn-login" data-toggle="modal" data-target="#logInModal">Log In</button>
                    <button type="button" class="btn btn-info btn-lg" id="btn-signup" data-toggle="modal" data-target="#signUpModal">Sign Up</button>
                </div>
            </div>
            <h3 style="color:white;"> {{popup}}</h3>
            <div id="logInModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-6 col-md-offset-3">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="username">Username:</label>
                                                    <input type="text" class="form-control" id="username" ng-model="login.username">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="subject">Password:</label>
                                                    <input type="password" class="form-control" id="password" ng-model="login.password">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" id="login-button-container">
                                            <div class="col-md-4 col-md-offset-8">
                                                <button type="button" class="btn btn-primary" id="btn-send" data-dismiss="modal" ng-click="login()">Log In</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="signUpModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4>Welcome!</h4>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-6 col-md-offset-3">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="username">Username:</label>
                                                    <input type="text" class="form-control" id="username" ng-model="newInfo.user">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="password">Password:</label>
                                                    <input type="password" class="form-control" id="password" ng-model="newInfo.pass">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="password">Re-enter Password:</label>
                                                    <input type="password" class="form-control" id="password-confirm" ng-model="newInfo.verify">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" id="signup-button-container">
                                            <div class="col-md-4 col-md-offset-8">
                                                <button type="button" class="btn btn-primary" id="btn-send" data-dismiss="modal" ng-click="signUp()">Sign up</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="vertical-center">
                    <div class="container">
                        <h1>Sealify</h1>
                        <p>A free, open source, encrypted mail service</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<%include templates/angular.ejs%>
</html>
